{
  "manifest_version": 2,
  "name": "Bookmark Folder",
  "version": "1.0",
  "description": "Show bookmark folder for current url",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",

  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["show-folder.js"]
  }]
}
