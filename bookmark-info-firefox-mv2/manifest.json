{
  "manifest_version": 2,
  "name": "Bookmark Info",
  "version": "1.0",
  "description": "Show bookmark folder for current url",
  "homepage_url": "https://github.com/PavelPoroskov/my-web-extensions/bkm-folder-firefox",

  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["content-script.js"]
  }]
}
